{
  "version": 2,
  "github": {
    "enabled": true,
    "silent": true
  },
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/disqus/(.*)",
      "destination": "https://disqus.com/api/$1"
    }
  ],
  "redirects": [
    {
      "source": "/blog/atom.xml",
      "permanent": true,
      "destination": "/feed/atom.xml"
    },
    {
      "source": "/blog/:year(\\d{4})/:month(\\d{2})/:day(\\d{2})/:slug([a-z0-9\\-]+).html",
      "permanent": true,
      "destination": "/blog/:slug"
    },
    {
      "source": "/blog/:year/:month/:slug",
      "permanent": true,
      "destination": "/blog/:slug"
    }
  ]
}
