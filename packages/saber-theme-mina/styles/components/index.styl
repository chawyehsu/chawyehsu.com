// Index list
.post-list
  display flex
  flex-wrap wrap
  padding: 0

  .post-card-wrap.column
    padding $gap-s

  .post-card-wrap
    display: flex
  .post-card
    width: 100%
    .post-card-image
      position: relative
      width: 100%
      background-color: #fafafa
      background-position: 50%
      background-repeat: no-repeat
      background-size: cover
      overflow: hidden
      &:after
        content: ""
        display: block
        padding-bottom: 75%
        width: 100%
      a.link
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        img
          display: block
          width: 100%
          object-fit: cover
        .overlay
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
    .post-card-info
      padding $gap-s
      word-break: break-all
      text-align: justify
      .post-title
        font-size: $font-size-h6

  .post-list-item
    list-style: none

    .post-title
      display: block
      margin: 0

    .post-meta
      color: $meta-color
      display: block
      font-size $font-size-small
      font-style: italic

// Index pagination
.pagination
  .prev-wrap
    display: flex
    justify-content: flex-start
  .next-wrap
    display: flex
    justify-content flex-end
  a
    display: flex
    align-items: center
    .icon
      padding-top 2px
    .text
      margin 0 $gap-s
